#!/usr/bin/env bash

parsed_args=$(pflags parse --name "$(basename "${0}")" ---- \
  -s n -l name -t string -r --regex "^[a-zA-Z0-9_-]+$" -h "Name of the workflow" ---- "$@") || exit

eval set -- "${parsed_args[@]}"

while [[ $# -gt 0 ]]; do
  [[ "$1" == "--" ]] && { shift; break; }
  case $1 in
    --help)
      printf '%s' "$2"
      exit 0
      ;;
    *)
      arg_name="${1#-}"
      arg_name="${arg_name#-}"
      eval "FLAGS_${arg_name}='${2//\'/\'\\\'\'}'"
      shift 2
      ;;
  esac
done

_cu.persistent_kv delete _cu_workflows_scheduled "${FLAGS_name}"
code=$?
[[ $code -eq 0 ]] || [[ $code -eq 40 ]] || { printf 'Failed to delete scheduled workflow %s\n' "${FLAGS_name}" >&2; exit $code; }

_cu.persistent_kv delete _cu_workflows_intervals "${FLAGS_name}"
code=$?
[[ $code -eq 0 ]] || [[ $code -eq 40 ]] || { printf 'Failed to delete interval for workflow %s\n' "${FLAGS_name}" >&2; exit $code; }

_cu.persistent_kv delete _cu_workflows "${FLAGS_name}"
code=$?
[[ $code -eq 0 ]] || [[ $code -eq 40 ]] || { printf 'Failed to delete workflow %s\n' "${FLAGS_name}" >&2; exit $code; }
