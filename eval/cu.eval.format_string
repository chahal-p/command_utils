#!/usr/bin/env bash

arg="$1"
if [[ "$arg" == *\ * ]] ||
    [[ "$arg" == *\$* ]] ||
    [[ "$arg" == *\`* ]] ||
    [[ "$arg" == *\\* ]] ||
    [[ "$arg" == *\&* ]] ||
    [[ "$arg" == *\'* ]] ||
    [[ "$arg" == *\"* ]] ||
    [[ "$arg" == *\!* ]] ||
    [[ "$arg" == *\#* ]] ||
    [[ "$arg" == *\(* ]] ||
    [[ "$arg" == *\)* ]] ||
    [[ "$arg" == *\{* ]] ||
    [[ "$arg" == *\}* ]] ||
    [[ "$arg" == *\[* ]] ||
    [[ "$arg" == *\]* ]] ||
    [[ "$arg" == *\** ]] ||
    [[ "$arg" == *\%* ]] ||
    [[ "$arg" == *\?* ]]
then
  cu.strings.quoted "$arg"
  exit 0
fi
printf '%s' "$arg"
