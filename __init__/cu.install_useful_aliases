#!/usr/bin/env bash

parsed=$(pflags parse --name "$(basename "$0")" --description "Install useful aliases of commands without cu namespace" ---- ---- "$@") || exit

eval set -- "$parsed"

while [[ $# -gt 0 ]]; do
  case $1 in
    --help)
      printf '%s' "$2"
      exit 0
      ;;
    *)
      shift
      ;;
  esac
done

cu.install_alias bin-to-hex=cu.bin-to-hex

cu.install_alias cat-which=cu.cat.which

cu.install_alias copy-to-clipboard=cu.copy-to-clipboard

cu.install_alias evalc=cu.eval.confirm

cu.install_alias hex-to-bin=cu.hex-to-bin

cu.install_alias less-which=cu.less.which

cu.install_alias py-print=cu.python.print

cu.install_alias vars-print=cu.vars.print

cu.install_alias vim-which=cu.vim.which

############ Date ############
echo 'complete -F _complete_cu.date.add date-add' | cu.persistent_source.add --shell_type bash -n _complete_date-add -f -
cu.install_alias date-add=cu.date.add

echo 'complete -F _complete_cu.date.from-epoch date-from-epoch' | cu.persistent_source.add --shell_type bash -n _complete_date-from-epoch -f -
cu.install_alias date-from-epoch=cu.date.from-epoch

echo 'complete -F _complete_cu.date.local-to-utc date-local-to-utc' | cu.persistent_source.add --shell_type bash -n _complete_date-local-to-utc -f -
cu.install_alias date-local-to-utc=cu.date.local-to-utc

echo 'complete -F _complete_cu.date.subtract date-subtract' | cu.persistent_source.add --shell_type bash -n _complete_date-subtract -f -
cu.install_alias date-subtract=cu.date.subtract

echo 'complete -F _complete_cu.date.to-epoch date-to-epoch' | cu.persistent_source.add --shell_type bash -n _complete_date-to-epoch -f -
cu.install_alias date-to-epoch=cu.date.to-epoch

echo 'complete -F _complete_cu.date.utc-to-local date-utc-to-local' | cu.persistent_source.add --shell_type bash -n _complete_date-utc-to-local -f -
cu.install_alias date-utc-to-local=cu.date.utc-to-local

############ Openssl ############
echo 'complete -F _complete_cu.openssl.convert-x509-der-to-pem openssl-convert-x509-der-to-pem' | cu.persistent_source.add --shell_type bash -n _complete_openssl-convert-x509-der-to-pem -f -
cu.install_alias openssl-convert-x509-der-to-pem=cu.openssl.convert-x509-der-to-pem

echo 'complete -F _complete_cu.openssl.convert-x509-pem-to-der openssl-convert-x509-pem-to-der' | cu.persistent_source.add --shell_type bash -n _complete_openssl-convert-x509-pem-to-der -f -
cu.install_alias openssl-convert-x509-pem-to-der=cu.openssl.convert-x509-pem-to-der

echo 'complete -F _complete_cu.openssl.decode-asn1 openssl-decode-asn1' | cu.persistent_source.add --shell_type bash -n _complete_openssl-decode-asn1 -f -
cu.install_alias openssl-decode-asn1=cu.openssl.decode-asn1

echo 'complete -F _complete_cu.openssl.decode-cert openssl-decode-cert' | cu.persistent_source.add --shell_type bash -n _complete_openssl-decode-cert -f -
cu.install_alias openssl-decode-cert=cu.openssl.decode-cert

echo 'complete -F _complete_cu.openssl.decode-crl openssl-decode-crl' | cu.persistent_source.add --shell_type bash -n _complete_openssl-decode-crl -f -
cu.install_alias openssl-decode-crl=cu.openssl.decode-crl

echo 'complete -F _complete_cu.openssl.decode-csr openssl-decode-csr' | cu.persistent_source.add --shell_type bash -n _complete_openssl-decode-csr -f -
cu.install_alias openssl-decode-csr=cu.openssl.decode-csr

echo 'complete -F _complete_cu.openssl.decode-key openssl-decode-key' | cu.persistent_source.add --shell_type bash -n _complete_openssl-decode-key -f -
cu.install_alias openssl-decode-key=cu.openssl.decode-key

echo 'complete -F _complete_cu.openssl.publickey-extract openssl-publickey-extract' | cu.persistent_source.add --shell_type bash -n _complete_openssl-publickey-extract -f -
cu.install_alias openssl-publickey-extract=cu.openssl.publickey-extract

echo 'complete -F _complete_cu.openssl.signature-extract openssl-signature-extract' | cu.persistent_source.add --shell_type bash -n _complete_openssl-signature-extract -f -
cu.install_alias openssl-signature-extract=cu.openssl.signature-extract

echo 'complete -F _complete_cu.openssl.tbs-extract openssl-tbs-extract' | cu.persistent_source.add --shell_type bash -n _complete_openssl-tbs-extract -f -
cu.install_alias openssl-tbs-extract=cu.openssl.tbs-extract
