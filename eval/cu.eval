#!/usr/bin/env bash

source pbash-args.sh || { echo "pbash-args.sh is not installed"; exit 1; }

internal_args=()
external_args=()

pbash.args.split_with_double_hyphen --args1 internal_args --args2 external_args -- "$@"

[ "$(cu.arrays.size ${external_args[@]})" == "0" ] && { cu.errors.echo "No external args found"; exit 1; }

pbash.args.extract -s v -l verbose -o verbose -d 'false' -- "${internal_args[@]}"
pbash.args.extract -s c -l confirmation -o confirmation -d 'false' -- "${internal_args[@]}"
pbash.args.extract -l serialized_args -o serialized_args -d 'false' -- "${internal_args[@]}"

if [ "$serialized_args" == "true" ]
then
  [ "$(cu.arrays.size "${external_args[@]}")" == "1" ] || { cu.errors.echo "Serialized args should be exactly single argument"; exit 1; }
  cu.eval.deserialize_args "$external_args" > /dev/null || exit 1
  readarray -t deserialized_args <<< "$(cu.eval.deserialize_args "$external_args")"
  external_args=()
  external_args=( "${deserialized_args[@]}" )
fi

____args____=()

if [ "$(cu.arrays.size "${external_args[@]}")" == "1" ]
then
  ____args____+=( "${external_args[@]}" )
else
  for ____x____ in "${external_args[@]}"
  do
    ____args____+=( "$(cu.eval.format_string "$____x____")" )
  done
fi

[[ "$verbose" == "true" || "$confirmation" == "true" ]] && echo "Executing command: ${____args____[@]}"

[ "$confirmation" == "true" ] && { cu.confirm "Confirm command" || exit 1; }

eval "${____args____[@]}"
